// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  Credentials Credentials[]
  SafeNotes   SafeNotes[]
  Wifi        Wifi[]
  Cards       Cards[]
}

enum Type {
  CREDIT
  DEBIT
  BOTH
}

model Credentials {
  id            Int    @id @default(autoincrement())
  user          Users  @relation(fields: [userId], references: [id])
  userId        Int
  title         String @db.VarChar(50)
  url           String
  password      String
  credentialTag String

  @@unique([title, credentialTag, userId])
}

model SafeNotes {
  id     Int    @id @default(autoincrement())
  user   Users  @relation(fields: [userId], references: [id])
  userId Int
  title  String @db.VarChar(50)
  note   String @db.VarChar(1000)

  @@unique([userId, title])
}

model Wifi {
  id       Int    @id @default(autoincrement())
  user     Users  @relation(fields: [userId], references: [id])
  userId   Int
  title    String @db.VarChar(50)
  password String
  wifiTag  String

  @@unique([title, wifiTag, userId])
}

model Cards {
  id             Int      @id @default(autoincrement())
  user           Users    @relation(fields: [userId], references: [id])
  userId         Int
  cardName       String
  cardNumber     BigInt
  password       String
  cvc            Int
  expirationDate DateTime
  isVirtual      Boolean
  type           Type
  title          String   @db.VarChar(50)

  @@unique([title, userId])
}
