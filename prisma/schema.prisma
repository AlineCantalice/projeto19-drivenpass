// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  Sessions    Sessions[]
  Credentials Credentials?
  SafeNotes   SafeNotes?
  Wifi        Wifi?
  Cards       Cards?
}

model Sessions {
  id     Int    @id @default(autoincrement())
  user   Users  @relation(fields: [userId], references: [id])
  userId Int    @unique
  token  String
}

model Credentials {
  id            Int    @id @default(autoincrement())
  user          Users  @relation(fields: [userId], references: [id])
  userId        Int    @unique
  title         String
  url           String
  password      String
  credentialTag String

  @@unique([title, credentialTag])
}

model SafeNotes {
  id     Int    @id @default(autoincrement())
  user   Users  @relation(fields: [userId], references: [id])
  userId Int    @unique
  title  String @unique
  note   String
}

model Wifi {
  id       Int    @id @default(autoincrement())
  user     Users  @relation(fields: [userId], references: [id])
  userId   Int    @unique
  title    String @unique
  password String
  wifiTag  String

  @@unique([title, wifiTag])
}

model Cards {
  id             Int      @id @default(autoincrement())
  user           Users    @relation(fields: [userId], references: [id])
  userId         Int      @unique
  cardName       String
  cardNumber     BigInt
  password       String
  cvc            Int
  expirationDate DateTime
  isVirtual      Boolean
  type           String
  title          String
  cardTag        String

  @@unique([title, cardTag])
}
